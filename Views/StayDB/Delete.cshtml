@model OS_GJ_Tutoring.Models.StayDB

@{
    ViewData["Title"] = "Delete";
}

<!--Page styling-->
<div class="ticket_content">

    <img src="~/css/stay_image.jpg" alt="flamingo" class="ticket_image">

    <div class="ticket_text">

        <h1>Delete RZA Lodge Booking</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>StayDB</h4>
            <hr />
            <!--Add Styling -->
            <dl class="row">
                <dt class="col-sm-2">
                    Name:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">

                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    Booking Date:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    Number of Nights
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumNight)
                </dd>
                <dt class="col-sm-2">
                    Number of Visitors
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumVisitors)
                </dd>
                <dt class="col-sm-2">
                    Lodge:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RoomName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <!--Button Styling-->
                <a asp-action="Index" style="color: #c49e32">Back to List</a>
            </form>
        </div>
    </div>
</div>


