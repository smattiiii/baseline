@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!--Added top bar to indecate page-->
<div class="home_bar">
    <h6>Log In</h6>
</div>


<div class="row">
    <div class="col-md-4">

        <section>
            <form id="account" method="post">

                <!--new class-->
                <div class="Login_text">

                    <h1>@ViewData["Title"]</h1>

                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <!--Added styling to button-->
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #8a77c4">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>

                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>

                        <p>
                            <h2> Haven'tregistered to access our <br /> personalised features yet?</h2>
                            Click Here! 
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <!--Added image to login page-->

            <div class="login_image">
                <img src="~/css/Login_image.jpg" alt="Learning from laptop" class="login-image" />
            </div>

            <!--Remove unnecessary details-->


        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
